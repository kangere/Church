<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="material.kangere.com.tandaza.Show_Notifications">

    <include
        android:id="@+id/tbShowNote"
        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/Show_Note_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbShowNote"

        >

        <LinearLayout
            android:id="@+id/lLConnection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Notification"
                android:id="@+id/bOpenUploadClass"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvShowNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".NotificationsActivity" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lLNoConnection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvShowNoteNoConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No internet Connection" />


            <Button
                android:id="@+id/bRefreshNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:text="Refresh"

                />


        </LinearLayout>
        <fragment
            android:id="@+id/Show_Note_fragment_navigation_drawer"
            android:name="material.kangere.com.tandaza.NavigationFragment"

            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/navigation_fragment"
            tools:layout="@layout/navigation_fragment" />

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
