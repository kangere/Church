<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/tvEventId"/>
        <TextView
            android:id="@+id/tvEventsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Event Name Here"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tvEventsTitle"
            android:scaleType="fitXY"
            android:src="@drawable/youth" />

        <TextView

            android:id="@+id/tvLabelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivEventImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvLabelDate"
            android:layout_toEndOf="@+id/tvLabelVenue"
            android:layout_toRightOf="@+id/tvLabelVenue"
            android:text="2015-11-12"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLabelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelDate"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvLabelTime"
            android:layout_toEndOf="@+id/tvLabelVenue"
            android:layout_toRightOf="@+id/tvLabelVenue"
            android:text="12:30"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLabelMinistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelTime"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/label_minstry"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEventMinistry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvLabelVenue"
            android:layout_toRightOf="@+id/tvLabelMinistry"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:text="Ministry here"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLabelVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelMinistry"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/label_venue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEventVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvLabelVenue"
            android:layout_toEndOf="@+id/tvLabelMinistry"
            android:layout_toRightOf="@+id/tvLabelMinistry"
            android:text="Venue here"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLabelDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventVenue"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/desc"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLabelDesc"

            android:linksClickable="true"
            android:text="@string/dummy_description"
            android:textIsSelectable="true"
            android:textSize="15sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

