<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Event Name Here"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ivEventImage"
                android:layout_below="@+id/tvEventTitle"
                android:src="@drawable/youth"
                android:scaleType="fitXY"/>

            <TextView

                android:id="@+id/tvLabelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEventImage"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/date"
                android:textSize="20sp" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-11-12"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/tvLabelDate"
                android:layout_toRightOf="@+id/tvLabelVenue"
                android:layout_toEndOf="@+id/tvLabelVenue" />

            <TextView
                android:id="@+id/tvLabelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelDate"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/time"
                android:textSize="20sp" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/tvLabelTime"
                android:layout_toRightOf="@+id/tvLabelVenue"
                android:layout_toEndOf="@+id/tvLabelVenue" />

            <TextView
                android:id="@+id/tvLabelMinistry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelTime"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_minstry"
                android:textSize="20sp" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventMinistry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ministry here"
                android:textSize="15sp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:layout_above="@+id/tvLabelVenue"
                android:layout_toRightOf="@+id/tvLabelMinistry" />

            <TextView
                android:id="@+id/tvLabelVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelMinistry"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_venue"
                android:textSize="20sp" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue here"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/tvLabelVenue"
                android:layout_toRightOf="@+id/tvLabelMinistry"
                android:layout_toEndOf="@+id/tvLabelMinistry" />
            <TextView
                android:id="@+id/tvLabelDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEventVenue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/desc"
                android:textSize="20sp" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLabelDesc"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:linksClickable="true"
                android:text="@string/dummy_description"
                android:textSize="15sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>