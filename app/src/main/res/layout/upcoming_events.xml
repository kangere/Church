<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dlEvenets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavActivities.UpcomingEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/upcoming_eventsToolbar"
            layout="@layout/app_bar" />

        <Button
            android:id="@+id/bCreateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:onClick="CreateEvent"
            android:background="@color/accent_color"
            android:text="@string/btn_event" />

        <android.support.v7.widget.RecyclerView

            android:id="@+id/rvEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEventsNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No Internet Connection"
            android:textSize="20sp"
            android:visibility="gone"

            />

    </LinearLayout>

    <fragment
        android:id="@+id/events_fragment"
        android:name="material.kangere.com.tandaza.NavigationFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/navigation_fragment"
        tools:layout="@layout/navigation_fragment" />
</android.support.v4.widget.DrawerLayout>
